# Basic Settings
set hidden true
set ignorecase true
set icons true

set previewer lf-ueberzug-previewer
set cleaner lf-ueberzug-cleaner

# Custom Functions
cmd mkdir ${{
	printf "Directory Name: "
	read ans
	mkdir $ans
}}

cmd mkfile ${{
	printf "File Name: "
	read ans
	$EDITOR $ans
}}

cmd setwallpaper %cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"

# Archive bindings
cmd unarchive ${{
	case $f in
		*.zip) unzip "$f" ;;
		*.tar.gz) tar -xzvf "$f" ;;
		*.tar.bz2) tar -xjvf "$f" ;;
		*) echo "Unsupported format" ;;
	esac
}}
